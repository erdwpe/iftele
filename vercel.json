{
  "version": 2,
  "routes": [
    { "src": "/", "dest": "/api/index.js" },
    { "src": "/api/sendMessage", "dest": "/api/sendMessage.js" },
    { "src": "/(.*)", "status": 404, "dest": "/view/404.html" }
  ],
  "crons": [
    {
      "path": "/api/noon",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/evening",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/price-alert",
      "schedule": "*/15 * * * *"
    }
  ]
}
